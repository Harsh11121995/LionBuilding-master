<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".activity.RewardActivity">


    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<!--    <RelativeLayout-->
<!--        android:background="@drawable/bg"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_reward"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/lnr_point"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:background="@color/colorDashBoard"
            android:id="@+id/lnr_point">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWight"
                android:textSize="16sp"
               android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:text="Total Point"
                android:layout_marginStart="15dp"
                android:gravity="start"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWight"
                android:textSize="16sp"
                android:layout_weight="1"
                android:id="@+id/txt_point"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:text="10 points"
                android:layout_marginEnd="15dp"
                android:gravity="end"/>

        </LinearLayout>



    </RelativeLayout>

