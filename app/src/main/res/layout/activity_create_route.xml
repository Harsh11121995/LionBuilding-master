<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".activity.RouteManagement.CreateRouteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-45dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/colorWight"
                app:cardCornerRadius="50dp">

                <LinearLayout
                    android:id="@+id/liner_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/register_bg"
                    android:orientation="vertical">



                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/img_width"
                            android:layout_height="@dimen/img_hight"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/icon_left_margin"
                            android:src="@drawable/zone" />
                        <Spinner
                            android:id="@+id/spnr_month"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:dropDownWidth="220dp"
                            android:dropDownVerticalOffset="30dp"
                            style="@style/mySpinnerItemStyle"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp">

                        </Spinner>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#c0c0c0"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/img_width"
                            android:layout_height="@dimen/img_hight"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/icon_left_margin"
                            android:src="@drawable/zone" />
                        <Spinner
                            android:id="@+id/spnr_year"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            style="@style/mySpinnerItemStyle"
                            android:dropDownWidth="220dp"
                            android:dropDownVerticalOffset="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp">

                        </Spinner>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#c0c0c0"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/img_width"
                            android:layout_height="@dimen/img_hight"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/icon_left_margin"
                            android:src="@drawable/zone" />
                        <Spinner
                            android:id="@+id/spnr_days"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            style="@style/mySpinnerItemStyle"
                            android:dropDownWidth="220dp"
                            android:dropDownVerticalOffset="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp">

                        </Spinner>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#c0c0c0"/>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/img_width"
                            android:layout_height="@dimen/img_hight"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/icon_left_margin"
                            android:src="@drawable/state" />
                        <Spinner
                            android:id="@+id/spnr_route"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:dropDownWidth="220dp"
                            android:dropDownVerticalOffset="30dp"
                            style="@style/mySpinnerItemStyle"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp">

                        </Spinner>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#c0c0c0"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/img_width"
                            android:layout_height="@dimen/img_hight"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/icon_left_margin"
                            android:src="@drawable/user" />

                        <com.thomashaertel.widget.MultiSpinner
                            android:id="@+id/spin_route_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:backgroundTint="@color/colorblack"
                            android:dropDownWidth="200dp"
                            android:dropDownVerticalOffset="35dp"
                            android:minHeight="40dp"
                            android:paddingStart="3dp"
                            android:textColor="@color/gray"
                            android:textSize="16sp"
                            tools:ignore="RtlSymmetry" />


                    </LinearLayout>




                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/img_width"
                            android:layout_height="@dimen/img_hight"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/icon_left_margin"
                            android:src="@drawable/user" />

                        <com.thomashaertel.widget.MultiSpinner
                            android:id="@+id/spin_city_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:backgroundTint="@color/colorblack"
                            android:dropDownWidth="200dp"
                            android:dropDownVerticalOffset="35dp"
                            android:minHeight="40dp"
                            android:paddingStart="3dp"
                            android:textColor="@color/gray"
                            android:textSize="16sp"
                            tools:ignore="RtlSymmetry" />


                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/img_width"
                            android:layout_height="@dimen/img_hight"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/icon_left_margin"
                            android:src="@drawable/user" />

                        <com.thomashaertel.widget.MultiSpinner
                            android:id="@+id/spin_dealer_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:backgroundTint="@color/colorblack"
                            android:dropDownWidth="200dp"
                            android:dropDownVerticalOffset="35dp"
                            android:minHeight="40dp"
                            android:paddingStart="3dp"
                            android:textColor="@color/gray"
                            android:textSize="16sp"
                            tools:ignore="RtlSymmetry" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_zonedata"
                        android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Zone Name"
                        android:textStyle="bold"
                        android:textColor="@color/colorblack"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="35dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:layout_marginEnd="10dp"
                            android:id="@+id/txt_zone_name"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="35dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="City Name"
                            android:textStyle="bold"
                            android:textColor="@color/colorblack"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="35dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:id="@+id/txt_city_name"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="35dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dealer Name"
                            android:textStyle="bold"
                            android:textColor="@color/colorblack"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="35dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/txt_dealer_name"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="35dp"/>

                    </LinearLayout>

                    </LinearLayout>




                </LinearLayout>
            </android.support.v7.widget.CardView>


            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/half_circle_btn"
                android:fontFamily="@font/poppins_regular"
                android:padding="0dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>



        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>