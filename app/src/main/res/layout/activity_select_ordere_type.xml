<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".activity.OrderManagement.SelectOrdereTypeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_hight"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:src="@drawable/state" />
            <Spinner
                android:id="@+id/spnr_order_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                style="@style/spnr_text"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

            </Spinner>

        </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:hint="Select Distributor"
        android:paddingStart="10dp"
        android:focusable="false"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/background_edittext"
        android:layout_marginBottom="10dp"
        android:id="@+id/edt_distibutor"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:hint="Select Dealer"
            android:paddingStart="10dp"
            android:focusable="false"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/background_edittext"
            android:layout_marginBottom="10dp"
            android:id="@+id/edt_dealer"/>


        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/half_circle_btn"
            android:fontFamily="@font/poppins_regular"
            android:padding="0dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>